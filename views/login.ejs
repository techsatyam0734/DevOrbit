<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-zinc-800 text-white min-h-screen flex flex-col">

    <!-- Navbar -->
    <header class="bg-zinc-800 shadow-md z-50">
      <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-extrabold text-blue-300 tracking-tight">
          DevOrbit
        </h1>
        <nav>
          <a
            href="/"
            class="bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition text-sm sm:text-base"
          >Home</a>
        </nav>
      </div>
    </header>

    <!-- Login Form Section -->
    <div class="min-h-screen flex items-center justify-center px-4 py-10">
      <form
        action="/login"
        method="post"
        class="bg-zinc-900 p-6 rounded-lg shadow-lg w-full max-w-md"
      >
        <h3 class="text-3xl font-bold text-blue-300 mb-6">Login your account</h3>

        <!-- Email Input -->
        <div class="mb-5">
          <label
            for="email"
            class="block mb-2 text-sm font-medium text-white"
          >Your email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5"
            placeholder="name@flowbite.com"
            required
          />
        </div>

        <!-- Password Input -->
        <div class="mb-5">
          <label
            for="password"
            class="block mb-2 text-sm font-medium text-white"
          >Your password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5"
            required
          />
        </div>

        <!-- Submit -->
        <input
          type="submit"
          value="Login"
          class="bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition w-full mt-2"
        />

        <!-- Redirect to Register -->
        <h4 class="mt-4 text-sm text-center">
          Not a user?
          <a href="/register" class="text-blue-300 hover:text-blue-500">Register Here</a>
        </h4>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  </body>
</html>



